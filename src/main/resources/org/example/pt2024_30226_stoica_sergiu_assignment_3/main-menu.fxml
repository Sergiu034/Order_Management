<VBox alignment="CENTER" prefHeight="420.0" prefWidth="330.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pt2024_30226_stoica_sergiu_assignment_3.BusinessLogic.MainMenuService">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Label text="Orders Management" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onClientButton" text="Clients" />
            <Button mnemonicParsing="false" onAction="#onProductView" text="Products" />
            <Button mnemonicParsing="false" onAction="#onOrderView" text="Orders" />
         </children>
      </HBox>
      <Button fx:id="showBills" mnemonicParsing="false" onAction="#onShowBills" prefHeight="25.0" prefWidth="83.0" text="Bills">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
       <TableView fx:id="billsTableView" prefWidth="600.0" visible="false" />
